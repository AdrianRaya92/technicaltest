<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/colorBlue">
                </solid>
                <padding
                    android:bottom="16dp"
                    android:left="16dp"
                    android:right="16dp"
                    android:top="16dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/colorBlue"/>
            </shape>
        </item>
    </layer-list></item>
    <item android:state_enabled="false"><layer-list>
        <item>
            <shape>
                <solid
                    android:textColor="@color/colorWhite"
                    android:color="@color/colorWhite">
                </solid>
                <padding
                    android:bottom="16dp"
                    android:left="16dp"
                    android:right="16dp"
                    android:top="16dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/colorBlack12"/>
            </shape>
        </item>
    </layer-list></item>
</selector>